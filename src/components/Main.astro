---
import {codigoTrabajoData} from '../data/codigo-trabajo'
---

<main class='flex-1 overflow-auto'>
	<div class='container py-6 px-2 max-w-4xl'>
		<h1 class='text-3xl font-bold mb-6'>
			Código de Trabajo de la República Dominicana
		</h1>

		<div id='search-results' class='space-y-8'>
			{
				codigoTrabajoData.map((section, index) => (
					<div id={`section-${index}`} class='scroll-mt-20'>
						<h2 class='text-2xl font-bold mb-4'>{section.title}</h2>
						<div class='whitespace-pre-line mb-4'>{section.content}</div>
						{section.subsections && section.subsections.length > 0 && (
							<div class='space-y-4 ml-4 mt-4'>
								{section.subsections.map((subsection, subIndex) => (
									<div id={`section-${index}-${subIndex}`} class='scroll-mt-20'>
										<h3 class='text-xl font-semibold mb-2'>
											{subsection.title}
										</h3>
										<div class='whitespace-pre-line'>{subsection.content}</div>
									</div>
								))}
							</div>
						)}
					</div>
				))
			}
		</div>
		<div id='no-results' class='text-center py-10 hidden'>
			<p class='text-muted-foreground'>
				No se encontraron resultados para "<span id='search-term'></span>"
			</p>
		</div>
	</div>
</main>
