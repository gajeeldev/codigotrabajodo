---
import {X} from '@lucide/astro'
import {codigoTrabajoData} from '../data/codigo-trabajo'
import TableOfContents from './TableOfContents.astro'
---

<aside
	id='sidebar'
	class='fixed inset-y-0 left-0 z-40 w-72 bg-background border-r pt-16 transition-transform duration-300 lg:translate-x-0 lg:static lg:w-72 -translate-x-full bg-white dark:bg-[#252525]'
>
	<div class='flex items-center justify-between p-4 lg:hidden'>
		<h2 class='text-lg font-semibold'>Tabla de Contenido</h2>
		<button id='close-sidebar' class='rounded-md p-2 hover:bg-accent'>
			<X class='h-5 w-5' />
		</button>
	</div>
	<div class='h-[calc(100vh-4rem)] pb-10 overflow-y-auto'>
		<div class='px-4 py-2'>
			<TableOfContents data={codigoTrabajoData} />
		</div>
	</div>
</aside>
